import { ConfigFn } from "@testing-library/react";
import React from "react";
import resolveConfig from "tailwindcss/resolveConfig";
import tailwindConfig from "../tailwind.config";
const baseButton = "font-bold py-2 px-4 rounded-full drop-shadow-lg m-2 ";

type ButtonProps = {
  label: string;
  onClick: () => void;
  buttonType: string;
  variant: string;
  size: string;
};

const Button = ({
  label,
  onClick,
  buttonType,
  variant = "primary",
  size = "md",
}: ButtonProps) => {
  const theme = resolveConfig(tailwindConfig);
  const { base, [variant]: variantStyles } = theme.button;
  const sizeStyles = variantStyles[size];
  let buttClass = baseButton + "bg-blue-500 hover:bg-blue-700 text-white";
  if (buttonType === "secondary") {
    buttClass = baseButton + "bg-white hover:bg-gray-200 text-black";
  }
  return (
    <button
      className={`${base} ${variantStyles.default} ${sizeStyles}`}
      type="submit"
      onClick={onClick}
    >
      {label}
    </button>
  );
};

export default Button;
